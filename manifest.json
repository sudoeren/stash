{
    "manifest_version": 3,
    "name": "Stash",
    "version": "1.0.0",
    "description": "Sekmelerinizi tek tıkla kaydedin ve hatırlayın. Minimal ve hızlı.",
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "contextMenus"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Stash - Sekmelerinizi Kaydedin"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "commands": {
        "save-all-tabs": {
            "suggested_key": {
                "default": "Alt+Shift+S"
            },
            "description": "Tüm sekmeleri kaydet"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}